	"blocks": [
		{
			"type": "column",
			"name": "t:sections.brand-image.blocks.column.name",
			"settings": [
				{
					"type": "image_picker",
					"id": "image",
					"label": "t:sections.brand-image.blocks.column.settings.image.label"
				},
				{
					"type": "image_picker",
					"id": "image_dark",
					"label": "t:sections.brand-image.blocks.column.settings.image_dark.label",
					"info": "t:sections.brand-image.blocks.column.settings.image_dark.info"
				},
